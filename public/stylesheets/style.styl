::selection 
  background #f00060
  text-shadow none
  color white

::-moz-selection 
  background #f00060
  text-shadow none
  color white


#wrap
  width 85%
  margin 0 auto
nav
  float right
  width 55%
  padding 0
  margin 0
  /*background-color #8fc*/
nav ul
  float right
  width 70%
  height 40px
  list-style none
  margin 0
  padding 0
  /*background-color #f7c*/
  li
    float left
    margin-left 2em
    margin-top 1em
  a
    text-decoration none
    text-transform uppercase
    color #A09696 
   :hover
     color: #f5c

header
  width 100%
  height 100px
header h1 
  color #FDC7E9
  text-shadow  3px 4px 2px #EEE
  margin 2em 0

#main-content
  width 50%
  float left
  clear both
  padding 0 1em 1em 0

#side-bar
  float right
  background-color rgba(179, 174, 174, 0.3)
  text-shadow -1px -1px 0 #FAFAFA
  width 27%
  padding 1em
  margin -17% 0 0 20px
  border-radius 0 7px 7px 7px
  ul
    list-style none
    margin 0
    padding 0
  li
    margin 1em 0
  a
    text-decoration none
    color #999
  a:hover
    color #1BF

form
  width 35%
  float left
  border 1px solid #ddd
#map
  width 60%
  height 395px
  float right
  border 1px solid #ddd

  
  
#work
  overflow hidden
  height 320px
  width 100%
  clear both
  background-color: rgba(71, 70, 70, 0.07)
  ul
    list-style none
  
  .view-box
    width 170px
    height 115px
    background-color #858585
    padding 0
    margin 1.8em 2.1em 0 2.1em
    float left
   .view-box:hover
      width 160px
      height 100px
      border 5px solid #fafafa







footer
  width 100%
  height 50px
  background-color #383838
  text-align center
  color #fff
  position fixed
  left 0
  bottom 0
  line-height 1.3em
